<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="wrap_content">

    <com.jackandphantom.carouselrecyclerview.view.ReflectionViewContainer
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_350sdp"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:gravity="center_horizontal"
        app:reflect_relativeDepth="0.4"
        app:reflect_gap="5dp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_250sdp"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="@dimen/_15sdp"
            app:cardElevation="@dimen/_4sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line_border_green_15">

                <ImageView
                    android:id="@+id/channelItemImagePlay"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@drawable/icon_radio"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/channelNamePlay"/>

                <TextView
                    android:id="@+id/channelNamePlay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@id/channelItemImagePlay"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </com.jackandphantom.carouselrecyclerview.view.ReflectionViewContainer>

</FrameLayout>