<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".locationTracking.LocationTrackingMainActivity">

    <include layout="@layout/custom_toolbar"
        android:id="@+id/toolbarLt"/>


    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapViewTracking"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarLt"/>


    <Button
        android:id="@+id/startTrackingLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start location"
        android:padding="@dimen/_5sdp"
        android:layout_margin="@dimen/_10ssp"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/stopBtn"/>


    <Button
        android:id="@+id/stopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Background locations"
        android:textSize="@dimen/_10ssp"
        android:layout_margin="@dimen/_10ssp"
        android:padding="@dimen/_5sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>




</androidx.constraintlayout.widget.ConstraintLayout>