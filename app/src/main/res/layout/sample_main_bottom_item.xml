<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/appSilverColor"
    android:id="@+id/cardMoreBackground"
    android:layout_margin="@dimen/_5sdp"
    app:cardElevation="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_60sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp">

        <ImageView
            android:id="@+id/mainItemImage"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/cloudy_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/mainItemText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.liveearth.streetview.navigation.map.worldradio.streetViewUtils.STVTextViewBold
            android:id="@+id/mainItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="@dimen/_7ssp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:text="My Favourite"
            app:layout_constraintEnd_toEndOf="@id/mainItemImage"
            app:layout_constraintStart_toStartOf="@id/mainItemImage"
            app:layout_constraintTop_toBottomOf="@id/mainItemImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>