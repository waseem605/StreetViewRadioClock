<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_2sdp"
    android:id="@+id/expenseItemBack"
    android:background="@drawable/line_rounded_border_silver"
    android:backgroundTint="@color/appSilverColor">

    <TextView
        android:id="@+id/itemExpenseName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:text="name"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/custom_edit_text_cut"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view87"
        android:layout_width="2dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_1sdp"
        android:background="@color/appSilverDarkColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/itemExpensePrice"
        app:layout_constraintStart_toEndOf="@id/itemExpenseName"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/itemExpensePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:ellipsize="end"
        android:gravity="start"
        android:text="4500"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textCursorDrawable="@drawable/custom_edit_text_cut"
        android:textSize="@dimen/_12ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/removeItem"
        app:layout_constraintStart_toEndOf="@id/view87"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/removeItem"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_cancel_icon"
        android:padding="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>