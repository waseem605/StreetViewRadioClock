<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorGrayDark"
    android:layout_height="match_parent"
    tools:context=".activities.StreetViewSpeedoMeterActivity">

    <include layout="@layout/custom_toolbar"
        android:id="@+id/toolbarLt"/>

    <include layout="@layout/speed_back_layout"
        android:id="@+id/back_speed"/>

    <TextView
        android:id="@+id/measuringTx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/measuring_unit"
        android:textColor="@color/appSilverColor"
        android:gravity="center"
        android:layout_margin="@dimen/_10sdp"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintTop_toBottomOf="@id/toolbarLt"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:text="KMs"
        android:textStyle="bold"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="@id/switchUnit"
        app:layout_constraintBottom_toBottomOf="@id/switchUnit"
        app:layout_constraintEnd_toStartOf="@id/switchUnit"/>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:showText="true"
        android:textOff="km"
        android:textOn="m"
        android:switchMinWidth="@dimen/_120sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp"
        app:track="@drawable/switch_track"
        android:thumb="@drawable/switch_thumb"
        app:layout_constraintTop_toBottomOf="@id/measuringTx"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:text="Miles"
        android:textStyle="bold"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toTopOf="@id/switchUnit"
        app:layout_constraintBottom_toBottomOf="@id/switchUnit"
        app:layout_constraintStart_toEndOf="@id/switchUnit"/>


    <com.github.anastr.speedviewlib.ImageSpeedometer
        android:id="@+id/imageSpeedometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:sv_indicator="NeedleIndicator"
        app:sv_withTremble="false"
        app:sv_unitTextColor="@color/white"
        app:sv_speedTextColor="@color/white"
        android:fitsSystemWindows="true"
        app:sv_image="@drawable/ic_speedo_meter_image"
        android:layout_marginTop="@dimen/_20sdp"
        app:layout_constraintTop_toBottomOf="@id/switchUnit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/speedDetailsLt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/imageSpeedometer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_5sdp">

            <TextView
                android:id="@+id/maxSpeedTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maximum Speed"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/appSilverDarkColor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/minSpeedTX"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/minSpeedTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maximum Speed"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/appSilverDarkColor"
                app:layout_constraintEnd_toStartOf="@id/avgSpeedTX"
                app:layout_constraintStart_toEndOf="@id/maxSpeedTX"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/avgSpeedTX"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Maximum Speed"
                android:textSize="@dimen/_8ssp"
                android:textColor="@color/appSilverDarkColor"
                app:layout_constraintStart_toEndOf="@id/minSpeedTX"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>





        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/speedBtn"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="start"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"
        android:textAllCaps="false"
        android:padding="@dimen/_10sdp"
        app:cornerRadius="@dimen/_8sdp"
        android:backgroundTint="@color/appSilverColor"
        app:layout_constraintTop_toBottomOf="@id/speedDetailsLt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>