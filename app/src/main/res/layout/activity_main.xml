<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/street_view_navigation_graph"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_120sdp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/liveEarthBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="Live earth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/meetMeMainBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="meet Me"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/liveEarthBtn" />

        <Button
            android:id="@+id/nasaGlobeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="Nasa"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/meetMeMainBtn" />

        <Button
            android:id="@+id/worldTimeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="time"
            app:layout_constraintBottom_toTopOf="@id/liveEarthBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/nearMeLocations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="Near me"
            app:layout_constraintBottom_toTopOf="@id/liveEarthBtn"
            app:layout_constraintStart_toEndOf="@id/worldTimeBtn" />

        <Button
            android:id="@+id/weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="weather"
            app:layout_constraintBottom_toTopOf="@id/liveEarthBtn"
            app:layout_constraintStart_toEndOf="@id/nearMeLocations" />

        <Button
            android:id="@+id/travelExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="Expense"
            app:layout_constraintBottom_toTopOf="@id/worldTimeBtn"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="navigation"
            app:layout_constraintBottom_toTopOf="@id/nearMeLocations"
            app:layout_constraintStart_toEndOf="@id/travelExpense" />

        <Button
            android:id="@+id/locationTracking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="Tracking"
            app:layout_constraintBottom_toTopOf="@id/nearMeLocations"
            app:layout_constraintStart_toEndOf="@id/navigation" />

        <Button
            android:id="@+id/speedMeter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:text="speedMeter"
            app:layout_constraintBottom_toTopOf="@id/travelExpense"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <me.ibrahimsn.lib.SmoothBottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bottom_bar_background"
        app:backgroundColor="#00000000"
       app:indicatorRadius="@dimen/_6sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/street_bottom_menu" />


</androidx.constraintlayout.widget.ConstraintLayout>