<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StreetViewClock" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/appMainColorTop</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- date picker dialog -->
    <style name="DialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorAccent">@color/appMainColor</item>
        <!-- Buttons -->
        <item name="buttonBarPositiveButtonStyle">@style/TextButton.Dialog1</item>
        <item name="buttonBarNegativeButtonStyle">@style/TextButton.Dialog1</item>
    </style>
    <style name="TextButton.Dialog1" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/appMainColor</item>
        <item name="android:negativeButtonText">@color/appMainColor</item>
        <item name="android:positiveButtonText">@color/appMainColor</item>
    </style>

    <style name="RatingBarColor" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/appSilverColor</item>
        <item name="colorControlActivated">@color/colorYellow</item>
    </style>

</resources>